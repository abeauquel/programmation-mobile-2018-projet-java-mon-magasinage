<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vue.VueModifierMagasin"
    tools:layout_editor_absoluteX="8dp"
    android:layout_margin="10dp"
    tools:layout_editor_absoluteY="8dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Page modifier magasin" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom" />

    <EditText
        android:id="@+id/vue_modifier_magasin_champ_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adresse" />

    <EditText
        android:id="@+id/vue_modifier_magasin_champ_adresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ville" />

    <EditText
        android:id="@+id/vue_modifier_magasin_champ_ville"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />
    <TextView
    android:id="@+id/textView5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Coordonnée X" />

    <EditText
        android:id="@+id/vue_modifier_magasin_champ_coorx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />
    <TextView
    android:id="@+id/textView6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Coordonnée Y" />

    <EditText
        android:id="@+id/vue_modifier_magasin_champ_coory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/action_modifier_magasin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier le magasin" />
    <Button
        android:id="@+id/action_supprimer_magasin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supprimer le magasin" />

</LinearLayout>